<%# Build The Content Heading %>
<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# Message Display %>
<%- messages() %>

<%# Errors Display %>
<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
  </ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname %></h2>
<a href="/account/update">Update Account Information</a>

<!-- Shows if user is logged in as Employee or Admin -->
<% if (accountData.account_type == "Employee" || accountData.account_type == "Admin") { %>
  <h3>Inventory Management</h3>
  <a href="/inv">Manage Inventory</a>
<% } %>
