<%# Build The Content Heading %>
<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# Show A Message Block %>
<%- messages() %>

<%# Errors Display %>
<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<%# Build The Add Classification Form %>
<form id="addClassForm" action="add-classification" method="post">
  <label for="classification_name">Classification Name:</label>
  <input
    type="text"
    id="classification_name"
    name="classification_name"
    pattern="^[a-zA-Z0-9]+$"
    required>
  <div>
    The new classification name cannot contain a space or special character of
    any kind.
  </div>
  <br>
  <input type="submit" class="submitButton" value="ADD CLASSIFICATION">
</form>
