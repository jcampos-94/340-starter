<%# Build The Content Heading %>
<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
    
<%# Show A Message Block %>
<%- messages() %>
    
<%# Errors Display %>
<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<%# Build The Delete Form %>
<form id="DeleteForm" action="/inv/deleteVehicle" method="post">
  <label for="inv_make">Make:</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    value="<%= locals.inv_make %>"
    required
    readonly><br>
  <label for="inv_model">Model:</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    value="<%= locals.inv_model %>"
    required
    readonly><br>
  <label for="inv_year">Year:</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    min="1886"
    max=<%= new Date().getFullYear() %>
    value="<%= locals.inv_year %>"
    required
    readonly><br>
  <label for="inv_price">Price:</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    min="0"
    max="999999999"
    value="<%= locals.inv_price %>"
    required
    readonly><br>
  <div>
    Deletion is permanent. Please make sure this is the right vehicle.
  </div><br>
  <input type="submit" class="submitButton" value="DELETE VEHICLE">
  <input type="hidden" name="inv_id"
  <% if(locals.inv_id) {%> value="<%= locals.inv_id %>"
  <% } %>>
</form>
