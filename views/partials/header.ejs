<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (!loggedin) { %>
      <!-- If user is not logged in, show "My Account" link -->
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } else { %>
      <!-- If user is logged in, show "Welcome" and "Logout" links -->
      <a title="Account management" href="/account">Welcome <%= accountData.account_firstname %></a>
      <a id="logoutLink" href="/logout">Logout</a>
    <% } %>
  </div>
</header>
